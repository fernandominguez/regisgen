doctype html
html
  include ./layouts/header.pug
  link(href="/bootstrap-select/dist/css/bootstrap-select.min.css" rel="stylesheet")
  body
    div.container-fluid.page-wrap
      div.row.d-flex.justify-content-center
        div.col-xs-8.col-sm-8.col-md-4.col-md-offset-4.col-xs-offset-2
          div.account-wall
            img(class='logo-img' src='/themes/default/img/logo.jpg')
            form(class='signin-form' action='/selectrole' method='post')
              input(type='hidden' name='username' value=username)
              input(type='hidden' name='password' value=password)
              div.form-group.text-center
                label(for="role")= lblRole
                  | :
                select#selectRole.selectpicker(name="role", multiple, data-max-options="1")
                  - for (var i=0; i<roles.length; i++)
                    option(value=roles[i].id)
                      | #{ roles[i].name }
              button(class='btn btn-lg btn-primary btn-block' type='submit')=btnSelect
              span.clearfix

      if (flashMessage && flashMessage.length)
        div.row.flashMessage
          div.col-md-4.col-md-offset-4
            div.alert.alert-danger.text-center= flashMessage
  script(src="/popper.js/dist/umd/popper.min.js")
  include ./layouts/footer.pug
  script(src="/bootstrap-select/dist/js/bootstrap-select.min.js")
